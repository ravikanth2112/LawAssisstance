# Environment configuration for Immigration Law Dashboard API
# Copy this file to .env and update values as needed

# Application Settings
DEBUG=true
HOST=127.0.0.1
PORT=8000

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./immigration_law.db

# SQL Server Configuration (uncomment when ready)
# SQL_SERVER=localhost
# SQL_DATABASE=ImmigrationLawDB
# SQL_USERNAME=your_username
# SQL_PASSWORD=your_password
# DATABASE_URL=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
