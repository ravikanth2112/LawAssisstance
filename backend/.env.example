# Environment configuration for Immigration Law Dashboard API
# Copy this file to .env and update values as needed

# Application Settings
DEBUG=true
HOST=127.0.0.1
PORT=8000

# Database Configuration - SQL Server Express
# For Windows Authentication (recommended for local development)
SQL_SERVER=localhost\SQLEXPRESS
SQL_DATABASE=ImmigrationLawDB
# Leave username/password empty for Windows Authentication
SQL_USERNAME=
SQL_PASSWORD=

# For SQL Server Authentication (if needed)
# SQL_USERNAME=your_sql_username
# SQL_PASSWORD=your_sql_password

# Manual DATABASE_URL override (optional)
# DATABASE_URL=mssql+pyodbc://@localhost\SQLEXPRESS/ImmigrationLawDB?driver=ODBC+Driver+17+for+SQL+Server&trusted_connection=yes

# SQLite fallback for development (comment out when using SQL Server)
# DATABASE_URL=sqlite:///./immigration_law.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
